PROC 0 DATE()
   CONTROL MAIN NOMSG NOLIST NOCONLIST NOSYMLIST
IF &DATE = THEN DO
   WRITE JULIAN SYNTAX IS: DATES DATE(JYYYYDDD)
   WRITE GREGORIAN SYNTAX IS: DATES DATE(MMDDYYYY)
   EXIT
   END
ELSE DO
   FREE FILE(SYSIN SYSPRINT DCB1)
   DEL DATES.SYSIN
   ATTRIB DCB1 LRECL(80)   BLKSIZE(9440) RECFM(F B) DSORG(PS)
   ALLOCATE FILE(SYSIN)  DATASET(DATES.SYSIN)     NEW +
       TRACKS USING(DCB1) SPACE(1 1)
   OPENFILE SYSIN OUTPUT
   SET &SYSIN = &STR(&DATE)
   PUTFILE SYSIN
   SET &SYSIN = &STR(END)
   PUTFILE SYSIN
   CLOSFILE SYSIN
   FREE FILE(SYSIN)
   ALLOCATE FILE(SYSIN)   DATASET(DATES.SYSIN) SHR
   ALLOCATE FILE(SYSPRINT) DATASET(*)
   CALL LOAD.LOAD(DATES)
   FREE F(SYSIN SYSPRINT)
   END
EXIT
